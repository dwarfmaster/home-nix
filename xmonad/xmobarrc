Config {
 -- appearance
   font     = "-*-terminus-medium-r-*-*-16-*-*-*-*-*-*-*"
 , bgColor  = "#663300"
 , fgColor  = "#ff8000"
 , position = Top
 , border   = NoBorder

 -- layout
 , sepChar  = "%"
 , alignSep = "}{"
 , template = "%StdinReader% }{ %multicpu% | %coretemp% | %memory% | %dynnetwork% | %date%"

 -- general behaviour
 , lowerOnStart     = True  -- send to the bottom of window stack
 , hideOnStart      = False -- start with window unmapped
 , allDesktops      = True  -- show on all destops
 , overrideRedirect = False
 , pickBroadest     = False -- choose widest display
 , persistent       = True  -- True to disable hiding
 , commands =
   [ Run DynNetwork [ "--template" , "<dev>: <tx>kB/s|<rx>kB/s"
