                    , "--normal"   , "darkorange"
                    , "--high"     , "red"
                    ] 10
   , Run MultiCpu   [ "--template" , "Cpu: <total0>-<total1>-<total2>-<total3>-<total4>-<total5>-<total6>-<total7>%"
                    , "--Low"      , "50"
                    , "--High"     , "90"
                    , "--low"      , "green"
                    , "--normal"   , "darkorange"
                    , "--high"     , "red"
                    ] 10
   , Run CoreTemp   [ "--template" , "Temp: <core0>-<core1>-<core2>-<core3>Â°C"
                    , "--Low"      , "65"
                    , "--High"     , "85"
                    , "--low"      , "green"
                    , "--normal"   , "darkorange"
                    , "--high"     , "red"
                    ] 50
   , Run Memory     [ "--template" , "Mem: <usedratio>%"
                    , "--Low"      , "20"
                    , "--High"     , "90"
                    , "--low"      , "green"
                    , "--normal"   , "darkorange"
                    , "--high"     , "red"
                    ] 10
    , Run Date      "%F (%a) %T" "date" 10
    , Run StdinReader
    ]
